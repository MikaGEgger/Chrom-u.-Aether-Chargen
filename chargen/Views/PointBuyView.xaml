<UserControl x:Class="WpfApp.Views.PointBuyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
	<StackPanel Margin="10" VerticalAlignment="Top" HorizontalAlignment="Center" >
		<Label Content="Enter Character Name"/>
		<TextBox Width="200" Height="30" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" 
                 />

		<TextBlock Text="Distribute Points:" FontSize="16" Margin="0,10,0,5"/>
		<ItemsControl ItemsSource="{Binding Attributes}">
			<ItemsControl.ItemTemplate>
				<DataTemplate>
					<StackPanel Orientation="Horizontal" Margin="5">
						<TextBlock Text="{Binding AttributeName}" Width="150"/>
						<TextBox Width="50" Text="{Binding Points, UpdateSourceTrigger=PropertyChanged}" 
                                 HorizontalAlignment="Right"/>
					</StackPanel>
				</DataTemplate>
			</ItemsControl.ItemTemplate>
		</ItemsControl>

		<Button Content="Submit" Width="120" Margin="0,10,0,0" Click="Submit_Click"/>
		<Button Content="Back" Width="120" Click="Back_Click"/>
		<Image Height="100" Width="100" Source="/Logo.png"/>
	</StackPanel>
	
</UserControl>